@model IEnumerable<Patitas_Felices.Models.MASCOTAS>


@{
    ViewData["Title"] = "Gestion de mascotas";
}    

<div class="container" style="text-align: center; margin-left: 200px;">
    

    <h1 style="text-align: left">Litado de mascotas</h1>

    <p style="text-align: right">
        <a class="btn btn-light"asp-area="" asp-controller="Mascota" asp-action="Create">Agregar  <i class="fa fa-plus" aria-hidden="true"></i></a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    NOMBRE
                </th>
                <th>
                    TIPO
                </th>
                <th>
                    RAZA
                </th>
                <th>
                    EDAD
                </th>
                <th>Actualizar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
            <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.raza)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.edad)
                </td>
                <td>
                    <a class="btn btn-light" asp-action="Edit" asp-route-id="@item.id"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> 
                </td>
                <td>
                    <a class="btn btn-light" asp-action="Delete" asp-route-id="@item.id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script
	src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
<script
	src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"></script>
<script type="text/javascript">
	$('.carousel').carousel({
  interval: 2000
})
	

