<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patitas_Felices</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/inicio.css">
    <link rel="stylesheet" href="~/Patitas_Felices.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="assets/img/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.4.0/remixicon.css" crossorigin="">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-xp5oHwoq2tf2B4ahxI3OLrWJrl5GKfrTbpZ7qOLj91Bm4Q0FAK0fTLMOh1GsBi8q" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,700,0,0" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-transparent border-bottom box-shadow mb-3 ">
            <div class="container-fluid">
        
                <a class="nav__logo" asp-area="" asp-controller="Home" asp-action="Index"> 
                   <img src="/img/logo.png" >
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav__button-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    @if (User.Identity.IsAuthenticated) {
                        
                        <li class="nav-item">
                            <a class="nav__button-link" asp-area="" asp-controller="Mascotas" asp-action="Index">Macotas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav__button-link" asp-area="" asp-controller="Donaciones" asp-action="Index">Donaciones</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav__button-link" asp-area="" asp-controller="Pago" asp-action="Index">Pagos</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav__button-link" asp-area="" asp-controller="ClientesList" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav__button-link" asp-area="" asp-controller="HistoryMedic" asp-action="Index">Gestion Medica</a>
                        </li> *@
                         <partial name="_MenuPartial" />
                     }
                    </ul>
                    <div class="nav__button">
                    <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" >
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Patitas_Felices - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>      
        let dropDown = document.querySelector('.dropdown');
        dropDown.onclick = function(){
             console.log("Dropdown clicked"); 
            dropDown.classList.toggle('active')
        }
    </script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" integrity="sha384-7oRbI5+zK+QFA0T9DxWwKz5g8EHGb5kRVjGfl/wWddE2LaoJFDRrdb+58KUf+dwW" crossorigin="anonymous"></script>




    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
