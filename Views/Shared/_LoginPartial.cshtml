@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="nav__button">
     <div class="row">
        @if (SignInManager.IsSignedIn(User)){ 

            <div class="col-6">
                <div class="nav__button-link">
                    <a  class="nav__button-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
                </div>
            </div>

            <div class="col-6">
                <div class="nav__button-link">
                    <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
                </div>
            </div>
        }else{
            
            <div class="col-6">
                <div class="nav__button-link">
                    <a class="nav__button-ghost"asp-area="Identity" asp-page="/Account/Register">Register</a>   
                </div>
            </div>

            <div class="col-6">
                <div class="nav__button-link" >
                    <a class="nav__button-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
            </div>
        }
    </div>
</div>