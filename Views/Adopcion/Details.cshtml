@model Patitas_Felices.Models.ADOPCION


<div>
    <h2>Detalles de la solicitud</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.CLIENTE.nombres)</dt>
        <dd>@Html.DisplayFor(model => model.CLIENTE.nombres)</dd>

        <dt>@Html.DisplayNameFor(model => model.Q_familiares)</dt>
        <dd>@Html.DisplayFor(model => model.Q_familiares)</dd>

        <dt>@Html.DisplayNameFor(model => model.Q_niños)</dt>
        <dd>@Html.DisplayFor(model => model.Q_niños)</dd>

        <dt>@Html.DisplayNameFor(model => model.Domicilio)</dt>
        <dd>@Html.DisplayFor(model => model.Domicilio)</dd>

        <dt>@Html.DisplayNameFor(model => model.Desc_Domicilio)</dt>
        <dd>@Html.DisplayFor(model => model.Desc_Domicilio)</dd>

        <dt>@Html.DisplayNameFor(model => model.Razon)</dt>
        <dd>@Html.DisplayFor(model => model.Razon)</dd>

        <dt>DNI</dt>
        <dd>
            <img src="data:image/png;base64, @Convert.ToBase64String(Model.Fot_DNI)" alt="Imagen de la mascota" />
        </dd>

            <dt>Recibo de luz</dt>
            <dd>
                <div id="pdfluz" style="display: none;">
                    <embed src="data:application/pdf;base64, @Convert.ToBase64String(Model.R_luz)" type="application/pdf" width="100%" height="500px" />
                </div>
                <button id="btnMostrarMedicinas">Ver Recibo</button>
            </dd>

            <dt>Recibo de Agua</dt>
            <dd>
                <div id="pdfagua" style="display: none;">
                    <embed src="data:application/pdf;base64, @Convert.ToBase64String(Model.R_agua)" type="application/pdf" width="100%" height="500px" />
                </div>
                <button id="btnMostrarMedicinas">Ver Recibo</button>
            </dd>

            <dt>Tratamientos</dt>
            <dd>
                <div id="pdfante" style="display: none;">
                    <embed src="data:application/pdf;base64, @Convert.ToBase64String(Model.Ant_Penales)" type="application/pdf" width="100%" height="500px" />
                </div>
                <button id="btnMostrarTratamientos">Ver Tratamientos</button>
            </dd>





        <dt>@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd>@Html.DisplayFor(model => model.Estado)</dd>
    </dl>
</div>