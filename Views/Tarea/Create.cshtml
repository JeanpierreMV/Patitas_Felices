@model Patitas_Felices.Models.TAREA

<h1>Crear Nueva Tarea</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Descripcion">Descripci√≥n de la Tarea</label>
        <input asp-for="Descripcion" class="form-control" required>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <div class="form-check">
            <input asp-for="Completada" class="form-check-input" type="checkbox">
            <label class="form-check-label" asp-for="Completada">Completada</label>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Crear Tarea</button>
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la lista de tareas</a>
</div>