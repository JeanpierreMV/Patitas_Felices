@model Patitas_Felices.Models.MascotaMedicoViewModel

@{
    ViewData["Title"] = "Crear Historia Médica";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Medico.Tip_Sangre" class="control-label">Tipo de Sangre</label>
                <input asp-for="Medico.Tip_Sangre" class="form-control" />
                <span asp-validation-for="Medico.Tip_Sangre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Medico.Fecha_reg" class="control-label">Fecha de Registro</label>
                <input asp-for="Medico.Fecha_reg" type="date" class="form-control" />
                <span asp-validation-for="Medico.Fecha_reg" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Medico.observaciones" class="control-label">Observaciones</label>
                <textarea asp-for="Medico.observaciones" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Medico.observaciones" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Medico.MASCOTAS.id" class="control-label">Seleccionar Mascota</label>
                <select asp-for="Medico.MASCOTAS.id" asp-items="@(new SelectList(Model.Mascotas, "id", "nombre"))" class="form-control">
                    <option value="">-- Seleccionar Mascota --</option>
                </select>
                <span asp-validation-for="Medico.MASCOTAS.id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar Cita Médica</button>
            </div>
        </form>
    </div>
</div>
