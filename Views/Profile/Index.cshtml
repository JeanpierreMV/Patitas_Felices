@model Patitas_Felices.Models.CLIENTE
@{
    ViewData["Title"] = "Perfil";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Profile.css">   

}

<div class="form-container">    
<form asp-action="Index" class="profile centered-form">

    <h2>Perfil de Usuario</h2>  

    <p>Correo: @User.Identity.Name</p>


    <div class="form-group">

        <input asp-for="nombres" class="form-control" placeholder="NOMBRES"/>
    </div>

    <div class="form-group">

        <input asp-for="apellidos" class="form-control" placeholder="APELLIDOS"/>
    </div>

    <div class="form-group">

        <input asp-for="apodo" class="form-control" placeholder="APODO"/>
    </div>

    <div class="form-group">

        <input asp-for="domicilio" class="form-control" placeholder="DOMICILIO"/>
    </div>

    <div class="form-group">

        <input asp-for="celular" class="form-control" placeholder="CELULAR"/>
    </div>

    <div class="form-group">

        <input asp-for="dni" class="form-control" placeholder="DNI" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
</div>