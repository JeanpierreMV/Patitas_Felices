@model Patitas_Felices.Models.CLIENTE

@{
    ViewData["Title"] = "Perfil";
}
<div class="container">
    <h2>Perfil de Usuario</h2>

    <p>Correo: @User.Identity.Name</p>

<form asp-action="Index">
    <div class="form-group">
        <label asp-for="nombres">Nombres</label>
        <input asp-for="nombres" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="apellidos">Apellidos</label>
        <input asp-for="apellidos" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="apodo">Apodo</label>
        <input asp-for="apodo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="domicilio">Domicilio</label>
        <input asp-for="domicilio" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="celular">Celular</label>
        <input asp-for="celular" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="dni">DNI</label>
        <input asp-for="dni" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
</div>